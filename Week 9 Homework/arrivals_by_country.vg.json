{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Total Tourism Arrivals by Country"},
    "width": 800,
    "height": 400,
    "projection": { "type": "equalEarth" },
    "data": { 
        "url": "ne_110m.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" } 
    },
    "transform": [
        { "filter": "isValid(datum.Country)" },
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "Arrivals Data.csv"
                },
                "key": "Country",
                "fields": ["Total_arrivals_sum"]
            }
        }
    ],
    "mark": { "type": "geoshape" },
    "encoding": {
        "color": {
            "field": "Total_arrivals_sum",
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Total_arrivals_sum",
                "type": "quantitative"
            }
        ]
    }
}